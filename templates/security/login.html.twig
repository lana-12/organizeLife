{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<section class="container mt-5 login">
    <form method="post">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes déjà connecté(e) en tant que  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me Déconnecter</a>
            </div>
        {% endif %}

            <div class="boxWhite p-4 ">
                <h2 class="titleUnderline">Me Connecter</h2>
                <div>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="mt-3">
                    <label for="inputPassword">Mot de Passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btnCustom my-4" type="submit">
                    Se Connecter
                </button>
                <div class="text-center">
                    <p class="mt-2 text-muted">
                        En vous connectant avec Google, un compte sera automatiquement créé si votre adresse email n'existe pas encore.
                    </p>
                    <a href="{{ path('connect_google_start') }}" class="btn btn-primary  ">
                        <i class="fab fa-google"></i>
                        Connexion avec Google
                    </a>
                </div>

                <p class="mt-3 ">
                    <a href="#">Mot de passe oublié</a>
                </p>
                <p>Pas encore inscrit(e) ?
                    <a href="{{ path('register') }}">
                        M'inscrire</a>
                </p>
            </div>
    </form>
</section>
{% endblock %}
