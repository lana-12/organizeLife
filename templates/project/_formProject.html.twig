{% extends 'base.html.twig' %}

{% block title %}
 {% if editMode %}
            Modifiez votre Projet 
        {% else %}
            Nouveau Projet
        {% endif %}
   | {{ parent() }}
{% endblock %}

{% block body %}
<div class="projectForm ">
    <section class="container">
        <div class="row">
            <div class="col-12 ">
                {{ form_errors(projectForm) }}
                {{ form_start(projectForm,  { 'attr': {'class': 'boxWhite'} }) }}
                <fieldset class="mb-3">
                    <div>
                        {% if editMode %}
                            <h2 class="mb-4 center  fs-1">
                                Modifier</h2>
                        {% else %}
                            <h2 class="mb-4 center  fs-1">
                                Cr√©er votre projet</h2>
                        {% endif %}
                        {{ form_rest(projectForm) }}
                    </div>
                </fieldset>
                <div class="d-flex justify-content-center">
                    {% if editMode %}
                        <button type="submit" class="btn btnCustom my-3 ">Modifier</button>
                    {% else %}
                        <button type="submit" class="btn btnCustom my-3 mx-auto">Enregistrer</button>
                    {% endif %}
                </div>
                {{ form_end(projectForm) }}
            </div>  
        </div>
    </section>
</div>
{% endblock %}